@using Travellers.Entities.Concrete.Dtos;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WinterHolidayDto

<form asp-action="Update" asp-controller="WinterHoliday" method="post">

    <h1>Winter Holiday Update</h1> <br />

    <label>Category Id:</label>
    <input type="text" placeholder="Category Id" asp-for="CategoryId" value="@Model.CategoryId" /> <br />
    <label>Tour Id:</label>
    <input type="text" placeholder="Tour Id" asp-for="TourId" value="@Model.TourId" /> <br />
    <label>Hotel Name:</label>
    <textarea placeholder="Hotel Name" asp-for="HotelName" value="@Model.HotelName"></textarea> <br />
    <label>Region:</label>
    <input type="text" placeholder="Region" asp-for="Region" value="@Model.Region" /> <br />
    <label>Accommodation Type:</label>
    <textarea placeholder="Accommodation Type" asp-for="AccommodationType" value="@Model.AccommodationType"></textarea> <br />
    <label>Facility Amenities:</label>
    <textarea placeholder="Facility Amenities" asp-for="FacilityAmenities" value="@Model.FacilityAmenities"></textarea> <br />
    <label>Date Of Entry:</label>
    <input type="date" placeholder="Date Of Entry" asp-for="DateOfEntry" value="@Model.DateOfEntry" /> <br />
    <label>Release Date:</label>
    <input type="date" placeholder="Release Date" asp-for="ReleaseDate" value="@Model.ReleaseDate" /> <br />
    <label>Price:</label>
    <input type="text" placeholder="Price" asp-for="Price" value="@Model.Price" /> <br>
    <label>Image:</label>
    <input type="text" placeholder="Image" asp-for="Image" value="@Model.Image" /> <br>

    <input type="submit" value="Update" href="/WinterHoliday/Index" />
</form>


