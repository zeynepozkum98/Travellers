@using Travellers.Entities.Concrete.Dtos;
@model WinterHolidayDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="/css/details.css" rel="stylesheet" />
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/details.js"></script>

<!------ Include the above in your HEAD tag ---------->

<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800&display=swap" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
<div class="pd-wrap">
	<div class="container">
		<div class="heading-section">
			<h2>Winter Holiday Details</h2>
		</div>
		<div class="row">
			<div class="col-md-6">
				<div id="slider" class="owl-carousel product-slider">
					<div class="item">
						<img src="@Model.Image" />
					</div>
					
				</div>
				
					
				</div>
			</div>
			<br />
			<div class="col-md-6">
				<div class="product-dtl">
					<div class="product-info">
						<div class="product-name">@Model.HotelName</div>
						
						<div class="product-price-discount"><span>@Model.Price.ToString("C")</span></div>
					</div>
					<p>
						@Model.FacilityAmenities
					</p>
				
						
					</div>
					<div class="product-count">
						<label for="size">Quantity</label>
						<form action="#" class="display-flex">
					<div class="qtyminus">-</div>
							<input type="text" name="quantity" value="@Model.Quantity" class="qty">
					<div class="qtyplus">+</div>
						</form>
						<a href="/WinterHoliday/AddBasketItem/@Model.Id" class="round-black-btn">Add to Cart</a>
					</div>
				</div>
			</div>
		</div>
		
			
			
			
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
